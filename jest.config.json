{
  "preset": "ts-jest",
  "setupFiles": ["<rootDir>/jest.setup.ts"],
  "roots": ["<rootDir>/src", "<rootDir>/tests"],
  "testMatch": ["**/*.spec.ts", "**/*.test.ts"],
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/$1",
    "^@main/(.*)$": "<rootDir>/src/main/$1",
    "^@tests/(.*)$": "<rootDir>/tests/$1"
  },
  "transform": {
    "^.+\\.tsx?$": [
      "ts-jest",
      {
        "tsconfig": "<rootDir>/tsconfig.node.json"
      }
    ]
  }
}
